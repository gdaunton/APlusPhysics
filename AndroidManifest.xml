<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rhosoft.aplusphysics"
    android:versionCode="5"
    android:versionName="1.1.3" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rhosoft.aplusphysics.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rhosoft.aplusphysics.FeedDetail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rhosoft.aplusphyisics.MainActivity" />
        </activity>
        <activity
            android:name="com.rhosoft.aplusphysics.VideoDetail"
            android:theme="@style/video" >
        </activity>
        <activity
            android:name="com.rhosoft.aplusphysics.VideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
